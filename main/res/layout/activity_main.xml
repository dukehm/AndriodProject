<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.miller.myfirstapp.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result"
        android:textSize="30sp"
        android:id="@+id/result_text"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textSize="@dimen/normal_text_size"
            android:layout_weight="1"
            android:background="@color/colorSeafoam"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CE"
            android:layout_weight="1"
            android:textSize="@dimen/normal_text_size"
            android:background="@color/colorDarkGrey"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:layout_weight="1"
            android:textSize="@dimen/normal_text_size"
            android:background="@color/colorDarkGrey"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="<--"
            android:layout_weight="1"
            android:textSize="@dimen/normal_text_size"
            android:background="@color/colorDarkGrey"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="log"
            android:layout_weight="1"
            android:textSize="@dimen/normal_text_size"
            android:background="@color/colorSeafoam"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PI"
            android:layout_weight="1"
            android:textSize="@dimen/normal_text_size"
            android:background="@color/colorPrimaryDark"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="7"
            android:background="@color/colorRed"
            android:textSize="@dimen/normal_text_size"
            android:onClick="buttonSevenPressed"
            android:id="@+id/button_seven"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:layout_weight="1"
            android:background="@color/colorRed"
            android:textSize="@dimen/normal_text_size"
            android:onClick="buttonEightPressed"
            android:id="@+id/button_eight"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:layout_weight="1"
            android:background="@color/colorRed"
            android:textSize="@dimen/normal_text_size"
            android:onClick="buttonNinePressed"
            android:id="@+id/button_nine"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:layout_weight="1"
            android:background="@color/colorOrange"
            android:textSize="@dimen/normal_text_size"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="n!"
            android:layout_weight="1"
            android:textSize="@dimen/normal_text_size"
            android:background="@color/colorYellow"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:layout_weight="1"
            android:background="@color/colorRed"
            android:textSize="@dimen/normal_text_size"
            android:onClick="buttonSixPressed"
            android:id="@+id/button_six"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:layout_weight="1"
            android:background="@color/colorRed"
            android:textSize="@dimen/normal_text_size"
            android:onClick="buttonFivePressed"
            android:id="@+id/button_five"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_weight="1"
            android:background="@color/colorRed"
            android:textSize="@dimen/normal_text_size"
            android:onClick="buttonFourPressed"
            android:id="@+id/button_four"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:layout_weight="1"
            android:background="@color/colorBlue"
            android:textSize="@dimen/normal_text_size"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+-"
            android:layout_weight="1"
            android:textSize="@dimen/normal_text_size"
            android:background="@color/colorPrimaryDark"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:layout_weight="1"
            android:background="@color/colorRed"
            android:textSize="@dimen/normal_text_size"
            android:onClick="buttonThreePressed"
            android:id="@+id/button_three"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:layout_weight="1"
            android:background="@color/colorRed"
            android:textSize="@dimen/normal_text_size"
            android:onClick="buttonTwoPressed"
            android:id="@+id/button_two"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/one"
            android:layout_weight="1"
            android:background="@color/colorRed"
            android:textSize="@dimen/normal_text_size"
            android:onClick="buttonOnePressed"
            android:id="@+id/button_one"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_weight="1"
            android:background="@color/colorOrange"
            android:textSize="@dimen/normal_text_size"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="("
            android:layout_weight="1"
            android:textSize="@dimen/normal_text_size"
            android:background="@color/colorYellow"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=")"
            android:layout_weight="1"
            android:textSize="@dimen/normal_text_size"
            android:background="@color/colorGreen"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_weight="1"
            android:background="@color/colorRed"
            android:textSize="@dimen/normal_text_size"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:layout_weight="1"
            android:textSize="@dimen/normal_text_size"
            android:background="@color/colorGreen"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:layout_weight="1"
            android:background="@color/colorBlue"
            android:textSize="@dimen/normal_text_size"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SQRT"
            android:layout_weight="1"
            android:textSize="@dimen/normal_text_size"
            android:background="@color/colorSeafoam"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sin"
            android:layout_weight="1"
            android:background="@color/colorGreen"
            android:textSize="@dimen/normal_text_size"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cos"
            android:layout_weight="1"
            android:background="@color/colorGreen"
            android:textSize="@dimen/normal_text_size"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tan"
            android:layout_weight="1"
            android:background="@color/colorGreen"
            android:textSize="@dimen/normal_text_size"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:layout_weight="1"
            android:textSize="@dimen/normal_text_size"
            android:background="@color/colorSeafoam"
            />

    </LinearLayout>
</LinearLayout>
